CC := c++
CFLAGS := -Wall -Wextra -Werror -std=c++98
NAME :=	zombies
INCLUDES := -I./include
SRCS := src/main.cpp src/Zombie.cpp src/newZombie.cpp

OBJS := $(SRCS:.cpp=.o)
all: $(NAME)

%.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(INCLUDES) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: clean fclean all re
